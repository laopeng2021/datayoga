{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "target": "esnext",
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "allowJs": true,
    "types": ["node"],
    "lib": ["esnext", "scripthost"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/index.d.ts", "src/**/*.ts"],
  "exclude": ["src/**/*.test.ts"]
}
